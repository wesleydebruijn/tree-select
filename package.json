{
  "name": "tree-select",
  "version": "0.1.0",
  "description": "A lightweight, vanilla JavaScript tree select component that transforms HTML inputs and selects into hierarchical trees.",
  "main": "./dist/tree-select.umd.js",
  "module": "./dist/tree-select.mjs",
  "types": "./dist/tree-select.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/tree-select.d.ts",
        "default": "./dist/tree-select.mjs"
      },
      "require": {
        "types": "./dist/tree-select.d.ts",
        "default": "./dist/tree-select.umd.js"
      }
    },
    "./dist/tree-select.css": {
      "import": "./dist/tree-select.css",
      "require": "./dist/tree-select.css"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "biome check --write .",
    "format": "biome check --write ."
  },
  "keywords": ["typescript", "tree", "select"],
  "author": "Wesley de Bruijn",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.3"
  },
  "files": ["dist"]
}
